model Hymn {
  id   String @id @default(nanoid(16))
  originalId String?
  originalMediaId String?

  contributor Contributor @relation(fields: [contributorId], references: [id], onDelete: Cascade)
  contributorId String

  title String @db.Citext
  lyrics String? @db.Citext

  mediaType MediaType @default(AUDIO)

  urls HymnMedia[]
  duration Int @default(0)
  views Int @default(0)

  recentViews RecentHymnView[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([title, contributorId])
  @@index([contributorId])
  @@index([views])
}

model HymnMedia {
  id Int @default(autoincrement()) @id

  source MediaSource
  format MediaFormat
  type MediaType

  hymn Hymn @relation(fields: [hymnId], references: [id], onDelete: Cascade)
  hymnId String

  url String @db.Citext

  @@index([hymnId])
}

model RecentHymnView {
  id Int @default(autoincrement()) @id
  ipAddress String

  hymn Hymn @relation(fields: [hymnId], references: [id], onDelete: Cascade)
  hymnId String

  createdAt DateTime @default(now())

  @@index([hymnId])
}
