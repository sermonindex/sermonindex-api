generator client {
  provider = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x", "native"]
  previewFeatures = ["postgresqlExtensions", "prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [citext(map: "citext")]
}

enum MediaType {
  AUDIO
  VIDEO
  IMAGE
  TEXT
}

enum MediaFormat {
  JPG
  PNG
  MP3
  MP4
  SRT
  VTT
  NONE
}

enum MediaSource {
  ARCHIVE
  YOUTUBE
  BUNNY
}
