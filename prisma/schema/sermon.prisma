model Sermon {
  id   String @id @default(nanoid(16))
  originalId String?
  originalMediaId String?

  contributor Contributor @relation(fields: [contributorId], references: [id], onDelete: Cascade)
  contributorId String

  title String @db.Citext
  description String?
  
  mediaType MediaType @default(TEXT)
  hasAudio Boolean @default(false)
  thumbnailUrl String?

  urls SermonMedia[]
  duration Int @default(0)
  views Int @default(0)

  bibleReferences SermonBibleReference[]
  topics Topic[]
  transcript SermonText?

  featured FeaturedSermon?
  recentViews RecentSermonView[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([title, contributorId])
  @@index([contributorId])
  @@index([createdAt])
  @@index([views])
}

model SermonMedia {
  id Int @default(autoincrement()) @id

  source MediaSource
  format MediaFormat
  type MediaType

  sermon Sermon @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  sermonId String

  url String

  @@index([sermonId])
}

model SermonBibleReference {
  id Int @default(autoincrement()) @id

  bookId String @db.Citext

  startChapter Int?
  endChapter Int?
  
  startVerse Int?
  endVerse Int?

  text String

  sermon Sermon @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  sermonId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sermonId])
  @@index([bookId])
}

model SermonText {
  id Int @default(autoincrement()) @id

  sermon Sermon @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  sermonId String @unique

  text String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FeaturedSermon {
  id Int @default(autoincrement()) @id

  sermon Sermon @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  sermonId String @unique

  createdAt DateTime @default(now())
}

model RecentSermonView {
  id        Int @default(autoincrement()) @id
  ipAddress String
  
  sermonId  String
  sermon    Sermon @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@index([createdAt])
}